  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Rebuild",
      "cargo": {
        "args": ["build", "--bin=podman-compose-mgr", "--package=podman-compose-mgr"],
        "filter": {
          "name": "podman-compose-mgr",
          "kind": "bin"
        }
      },
      "args": [
        "--path",
        "${env:HOME}/docker",
        "--mode",
        "rebuild",
        "--verbose",
        "--exclude-path-patterns",
        "docker/archive",
        // "--include-path-patterns",
        // "golf",
        "--build-args",
        "USERNAME=`id -un 1000`"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Secret refresh",
      "cargo": {
        "args": ["build", "--bin=podman-compose-mgr", "--package=podman-compose-mgr"],
        "filter": {
          "name": "podman-compose-mgr",
          "kind": "bin"
        }
      },
      "args": [
        "--path",
        "${env:HOME}/docker",
        "--mode", 
        "secret-retrieve",
        "--verbose",
        "--exclude-path-patterns",
        "docker/archive",
        "--secrets-client-id",
        "${workspaceFolder}/tests/test2_personal_testing_data/client_id.txt",
        "--secrets-client-secret-path",
        "${workspaceFolder}/tests/test2_personal_testing_data/secret.txt",
        "--secrets-tenant-id",
        // from azure portal -> entra id -> tenant. Not the same as subscription id
        "${workspaceFolder}/tests/test2_personal_testing_data/tenant_id.txt",
        "--secrets-vault-name",
        "${workspaceFolder}/tests/test2_personal_testing_data/vault_name.txt",
        "--secret-mode-output-json",
        "${workspaceFolder}/",
        "--secret-mode-input-json",
        "${env:HOME}/docker/input.json"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'image_refresh'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=image_refresh",
          "--package=image_refresh"
        ],
        "filter": {
          "name": "image_refresh",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}