  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'image_refresh'",
      "cargo": {
        "args": ["build", "--bin=image_refresh", "--package=image_refresh"],
        "filter": {
          "name": "image_refresh",
          "kind": "bin"
        }
      },
      "args": [
        "--path",
        // "${workspaceFolder}/tmp/",
        "/home/dfrye/docker",
        "--mode",
        "rebuild",
        "--verbose"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'image_refresh'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=image_refresh",
          "--package=image_refresh"
        ],
        "filter": {
          "name": "image_refresh",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
